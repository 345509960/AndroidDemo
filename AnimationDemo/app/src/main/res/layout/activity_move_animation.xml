<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".moveanimation.MoveAnimationActivity">

    <Button
            android:id="@+id/btn_line_move"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="ObjectAnimation实现直线移动"/>

    <Button
            android:id="@+id/btn_crul_move"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="ObjectAnimation实现PathInterpolator"/>

    <Button
            android:id="@+id/btn_crul_move_customzilier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="ObjectAnimation自定义Path移动"/>
</LinearLayout>