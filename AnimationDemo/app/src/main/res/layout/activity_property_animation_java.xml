<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".viewanimation.ViewXmlAnimationActivity">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <Button
                android:id="@+id/btn_valueanimation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="ValueAnmaition"/>
        <Button
                android:id="@+id/btn_obejctanimation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="OBjectAnimation"/>
        <Button
                android:id="@+id/btn_animationSet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="组合动画"/>
        <Button
                android:id="@+id/btn_parabola"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="抛物线"/>

    </LinearLayout>

    <TextView
            android:id="@+id/iv_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#000"/>

</LinearLayout>